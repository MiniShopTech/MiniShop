@using MayNghien.Models.Response.Base
@using MiniShop.DTOs.Responses
@model AppResponse<List<CategoryResponse>>

<div class="container mt-4">
    <h2 class="text-center mb-4">Category List</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-controller="Category" asp-action="Create">Create New Category</a>
    </div>

    <div class="d-flex align-items-center gap-2 mb-3">
        <form method="get" asp-action="Index" asp-controller="Category" class="input-group rounded shadow-sm border">
            <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
            <input type="text" name="search" class="form-control border-0 shadow-none" placeholder="Search..." value="@Context.Request.Query["search"]">
            <button type="submit" class="btn btn-outline-info">🔍</button>
        </form>

        <button class="btn btn-outline-secondary d-flex align-items-center gap-1 px-3">
            <i class="bi bi-funnel"></i> Filters
            <span class="badge bg-primary rounded-pill">3</span>
        </button>

        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-1 px-3" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-sort-alpha-down"></i> Sort by
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Name (A-Z)</a></li>
                <li><a class="dropdown-item" href="#">Name (Z-A)</a></li>
                <li><a class="dropdown-item" href="#">Newest First</a></li>
                <li><a class="dropdown-item" href="#">Oldest First</a></li>
            </ul>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Data != null && Model.Data.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Present</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Data)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                @if (category.IsPresent)
                                {
                                    <span class="badge bg-success-subtle text-success">✔ True</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger">✖ False</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a class="btn btn-outline-info btn-sm" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">🔎</a>
                                    <a class="btn btn-outline-warning btn-sm" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">📝</a>
                                    <a class="btn btn-outline-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">❌</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No categories found.</div>
    }
</div>
